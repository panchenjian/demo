{
  "easycom": {
    "autoscan": true,
    // 组件自动加载规则
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        // "navigationBarTitleText": "Luna AI写真",
		"navigationStyle":"custom"
      }
    },
    {
      "path": "pages/swap/index",
      "style": {
        // "navigationBarTitleText": "一对一换脸"
		"navigationStyle":"custom"
      }
    },
    {
      "path": "pages/swap/template",
      "style": {
        "navigationBarTitleText": "换脸模板"
      }
    },
    {
      "path": "pages/draw/confirm",
      "style": {
        "navigationBarTitleText": "制作照片"
      }
    },
    {
      "path": "pages/draw/result",
      "style": {
        "navigationBarTitleText": "专属肖像"
      }
    },
    {
      "path": "pages/user/index",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    },
    {
      "path": "pages/user/contact",
      "style": {
        "navigationBarTitleText": "联系我们"
      }
    },
    {
      "path": "pages/recharge/index",
      "style": {
        "navigationBarTitleText": "充值中心"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#FFF",
	
    "backgroundColor": "#FFF"
  },
  "tabBar": {
    "color": "#8C8C8C",
    "selectedColor": "#D16FFF",
    "borderStyle": "white",
    "backgroundColor": "#F5F6F7",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/tabbar-icon-portrait.png",
        "selectedIconPath": "static/tabbar-icon-portrait-hl.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/swap/index",
        "iconPath": "static/tabbar-icon-swap.png",
        "selectedIconPath": "static/tabbar-icon-swap-hl.png",
        "text": "玩法"
      },
      {
        "pagePath": "pages/user/index",
        "iconPath": "static/tabbar-icon-user-new.png",
        "selectedIconPath": "static/tabbar-icon-user-new-hl.png",
        "text": "我的"
      }
    ]
  },
  "condition": {
    //模式配置，仅开发期间生效
    "current": 0, //当前激活的模式(list 的索引项)
    "list": [
      {
        "name": "", //模式名称
        "path": "", //启动页面，必选
        "query": "" //启动参数，在页面的onLoad函数里面得到
      }
    ]
  }
}
